# EditorConfig: https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{py,yaml,yml,cfg}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.cfg]
indent_style = tab

[Dockerfile]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[.travis.yml]
indent_style = space
indent_size = 2
